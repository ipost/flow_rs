WHITESPACE = _{ " " | "\t" | "\n" | "\r" }

process = { (if_branch | step | WHITESPACE)+ }

if_branch = ${ "if" ~ WHITESPACE+ ~ expression ~ WHITESPACE* ~ "{" ~ WHITESPACE* ~ process ~ WHITESPACE* ~ "}" }

step = { expression ~ terminator }
expression = ${ nw_char ~ (nw_char | WHITESPACE)* }
nw_char = _{ (ASCII_ALPHANUMERIC | "." | "_" | "-" | "/" | "(" | ")") }
terminator = _{ ";" }
